  ##
  # Mail [Notifier]
  #
  notify_by Mail do |mail|
    mail.on_success           = <%= @email_success %>
    mail.on_warning           = <%= @email_warning %>
    mail.on_failure           = <%= @email_failure %>
    mail.from                 = "<%= @_email_from %>"
    mail.to                   = "<%= @email_to %>"
<% if @relay_host -%>
    mail.address              = "<%= @relay_host %>"
<% end -%>
<% if @relay_host -%>
    mail.port                 = <%= @relay_port %>
<% end -%>
<% if @relay_user -%>
    mail.user_name            = "<%= @relay_user %>"
<% end -%>
<% if @relay_pass -%>
    mail.password             = "<%= @relay_pass %>"
<% end -%>
<% if @relay_auth -%>
    mail.authentication       = "<%= @relay_auth %>"
<% end -%>
<% if @relay_encryption -%>
    mail.encryption           = "<%= @relay_encryption %>"
<% end -%>
  end
