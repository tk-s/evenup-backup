  ##
  # Slack [Notifier]
  #
  notify_by Slack do |slack|
    slack.on_success = <%= @slack_success %>
    slack.on_warning = <%= @slack_warning %>
    slack.on_failure = <%= @slack_failure %>

    slack.icon_emoji = ':warning:'

    slack.webhook_url = '<%= @slack_webhook_url %>'
    slack.username = '<%= @slack_from %>'
    slack.channel = '<%= @slack_channel %>'
  end
